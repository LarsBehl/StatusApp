<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StatusApp.Components.ServiceComponent">
    <ContentView.Content>
        <Frame CornerRadius="10"
               Margin="8 0">
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="{Binding Service.Name}"
                           FontSize="Medium"
                           VerticalOptions="Center"/>
                    <ImageButton Source="more_vert_black.png"
                                 Clicked="OnMoreClicked" />
                </HorizontalStackLayout>
                <Label Text="{Binding Service.Url}" />
            </VerticalStackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>