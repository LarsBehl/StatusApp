<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:StatusApp.Components"
             x:Class="StatusApp.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <RefreshView RefreshColor="{DynamicResource PrimaryColor}" x:Name="RefreshView">
        <ScrollView>
            <VerticalStackLayout Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
                <Label IsVisible="{Binding NoData}" Text="{Binding Message}" HorizontalOptions="Center" />
                <Label Text="Test" />
                <VerticalStackLayout x:Name="ServiceList">
                    <!-- Filled by code because of better data handling -->
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
